<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#B5ACAC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPizza"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imgPizza">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pizza da boa"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:padding="5sp"
                android:id="@+id/txtDescricaoPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza massa que não tem só massa kjdhashdjaskdhakjshdakhdhaskdhakjhdajkhdkahdkajhdadakhdajksdruifhsihfhsdfhdfkjshdfsjhfsjkdjkhskjhdfj." />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:layout_margin="5dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5" />

                <TextView
                    android:layout_marginTop="1dp"
                    android:textSize="15dp"
                    android:id="@+id/txtAvaliacaoPizza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5" />

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_share" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_favorite" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>